# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/imageopt?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_ACCOUNT_ID=your-aws-account-id

# S3 Buckets
S3_ORIGINAL_BUCKET=imageopt-original-{account}-us-east-1
S3_TRANSFORMED_BUCKET=imageopt-transformed-{account}-us-east-1

# CloudFront
CLOUDFRONT_DOMAIN=d123abc.cloudfront.net

# CloudFront Signed URLs (for private assets)
# Generate key pair: openssl genrsa -out private_key.pem 2048
# Get Key Pair ID from CloudFront > Key Management > Public Keys
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY=

# CloudFront Distribution ID (for cache invalidation)
# Get from CloudFront > Distributions > ID column
CLOUDFRONT_DISTRIBUTION_ID=

# Signed URL expiry (for private asset access)
SIGNED_URL_EXPIRY_SECONDS=3600

# Upload Configuration
MAX_UPLOAD_SIZE_MB=50
PRESIGNED_URL_EXPIRY_SECONDS=1200

# Asset Cleanup Configuration
# How many hours to keep deleted assets before permanent deletion from S3
# Default: 90 hours (about 3.75 days)
ASSET_RETENTION_HOURS=90

# CloudFront Pricing (USD per GB) - Optional, defaults to AWS standard rates
# These are used for bandwidth cost calculations in analytics

# Tier 1: First 10 TB (10,240 GB) at $0.085/GB
CF_PRICING_TIER1_MAX_GB=10240
CF_PRICING_TIER1_PRICE=0.085

# Tier 2: Next 40 TB (40,960 GB, cumulative 50 TB / 51,200 GB) at $0.080/GB
CF_PRICING_TIER2_MAX_GB=51200
CF_PRICING_TIER2_PRICE=0.080

# Tier 3: Next 100 TB (102,400 GB, cumulative 150 TB / 153,600 GB) at $0.060/GB
CF_PRICING_TIER3_MAX_GB=153600
CF_PRICING_TIER3_PRICE=0.060

# Tier 4: Next 350 TB (358,400 GB, cumulative 500 TB / 512,000 GB) at $0.040/GB
CF_PRICING_TIER4_MAX_GB=512000
CF_PRICING_TIER4_PRICE=0.040

# Tier 5: Over 500 TB at $0.030/GB
CF_PRICING_TIER5_PRICE=0.030
